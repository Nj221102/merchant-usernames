{
  "name": "dns-api",
  "version": "1.0.0",
  "description": "BIP353-compliant username API with DNS TXT record creation",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "worker": "node dist/worker.js",
    "dev:worker": "ts-node-dev --respawn --transpile-only src/worker.ts",
    "clean": "rimraf dist tsconfig.tsbuildinfo *.tsbuildinfo",
    "test": "node test-api.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "prettier --check . && npm run typecheck",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "redis": "^4.6.12",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
